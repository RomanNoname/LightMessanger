@using LightMessanger.WEB.Validation
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="row">
    @if (!ViewData.ModelState.IsValid)
{
    <div class="alert-window">
        <div class="alert-error">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    </div>
}
                 <form action="/Account/Login" class="col-md-2 col-md-offset-4 mx-auto" method="post">
              
                <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

                <div class="form-group">
                     <label asp-for="UserName">Login</label>
                    <input asp-for="UserName" type="text" class="form-control" id="floatingInput" placeholder="Your login">
                  
                    <span asp-validation-for="UserName" class="validation-message" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" for="floatingPassword">Password</label>
                    <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
                    
                    <span asp-validation-for="Password" class="validation-message" />
                </div>
                <a class="form-label" asp-controller="Account" asp-action="Registration">Don't have an account yet?  Sign Up</a>
                <button type="submit" class="btn btn-primary btn-block mt-3" >Sign in</button>
            </form>
       
         
 </div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>