@using LightMessanger.WEB.Validation
@model RegistrationModel
@{
	ViewData["Title"] = "Registration";
}
<div class="raw">
	@if (!ViewData.ModelState.IsValid)
	{
		<div class="alert-window">
			<div class="alert-error">
				<ul>
					@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
					{
						<li>@error.ErrorMessage</li>
					}
				</ul>
			</div>
		</div>
	}



	<form id="FormRegistration" class="form-horizontal col-md-3 col-md-offset-4" action="/Account/Registration" method="post">
		<h1 class="h3 mb-3 fw-normal">Registration</h1>
		<div class="form-group">
			<label asp-for="Email" class="form-label">Email</label>
			<input type="email" asp-for="Email" class="form-control" aria-describedby="emailHelp">
			<span asp-validation-for="Email" class="validation-message" />
			<div id="emailHelp" class="form-text">We do not share your data with third parties</div>
		</div>
		<div class="form-group">
			<label asp-for="UserName" class="form-label">Login</label>
			<input asp-for="UserName" type="text" minlength="3" required class="form-control">
			<span asp-validation-for="UserName" class="validation-message" />
		</div>
		<div class="form-group">
			<label asp-for="Password" class="form-label">Password</label>
			<input asp-for="Password" type="password" required class="form-control">
			<span asp-validation-for="Password" class="validation-message" />
		</div>
		<div class="form-group">
			<label asp-for="ConfirmPassword" class="form-label">Repeat password</label>
			<input asp-for="ConfirmPassword" required type="password" class="form-control">
			<span asp-validation-for="ConfirmPassword" class="validation-message" />
		</div>
		<div class="form-group row">
			<a class="form-label" asp-controller="Account" asp-action="Login">Do you already have an account?</a>
			<div>
				<br /><button type="submit" class="btn btn-primary btn-block mt-3">Registration</button>
			</div>
		</div>


	</form>

</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>